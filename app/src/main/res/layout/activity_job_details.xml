<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:background="@color/defaultColor"
		tools:context="com.parttime.Activity.User.JobDetailsActivity"
		>

	<com.parttime.UI.TopBar_
			android:id="@+id/work_details_topBar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			/>

	<ScrollView
			android:layout_width="match_parent"
			android:layout_height="0dp"
	        android:layout_weight="1"
			>

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				>

			<LinearLayout
					android:paddingTop="10dp"
					android:paddingBottom="10dp"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@color/white"
					android:paddingRight="10dp"
					android:paddingLeft="10dp"
					android:orientation="vertical"
					>

				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
				        android:orientation="horizontal"
						>
					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="信息编号 : "
							/>

					<TextView
							android:id="@+id/work_details_id"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							/>

				</LinearLayout>

				<TextView
						android:id="@+id/work_details_name"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textColor="@color/black"
						android:textSize="18sp"
						/>

				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						>


					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="-"
							/>

					<TextView
							android:id="@+id/work_details_type"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="其他"
							/>

					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="-已报"
							/>

					<TextView

							android:id="@+id/work_details_number"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="0"
							/>

					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="人/需"
							/>

					<TextView
							android:id="@+id/work_details_expected"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="0"
							/>

					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="人"
							/>

				</LinearLayout>

				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:gravity="center_vertical"
						>

					<ImageView
							android:layout_width="20dp"
							android:layout_height="20dp"
							android:background="@mipmap/clock"
							/>

					<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="horizontal"
							>


						<TextView
								android:layout_marginLeft="10dp"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="报名截止 : "
								android:gravity="center_vertical"
								/>

						<TextView
								android:id="@+id/work_details_signUp_deadline"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:gravity="center_vertical"
								/>

					</LinearLayout>

				</LinearLayout>

				<TextView
						android:id="@+id/work_details_pay"
						android:layout_marginTop="10dp"
						android:layout_marginBottom="10dp"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textColor="@color/orange"
						android:text="0元/天"
						android:textSize="25sp"
						/>

				<TextView
						android:id="@+id/work_details_company"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textColor="@color/black"
						android:text="知名人力资源公司"
						android:textSize="16sp"
						/>

			</LinearLayout>

			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="100dp"
					android:paddingRight="10dp"
					android:paddingLeft="10dp"
					android:gravity="center_vertical"
					android:background="@color/defaultColor"
					android:orientation="horizontal"
					>

				<TextView
						android:id="@+id/details_v1"
						android:layout_width="0dp"
						android:layout_height="match_parent"
						android:layout_weight="1"
						android:text=" 身高不限"
						android:textSize="16sp"
						android:textColor="@color/black"
						android:gravity="center_vertical"
						android:drawableLeft="@mipmap/icon_checked"
						/>

				<TextView
						android:visibility="gone"
						android:id="@+id/details_v2"
						android:layout_width="0dp"
						android:layout_height="match_parent"
						android:layout_weight="1"
						android:text=" 性别不限"
						android:textSize="16sp"
						android:textColor="@color/black"
						android:gravity="center_vertical"
						android:drawableLeft="@mipmap/icon_checked"
						/>

				<TextView
						android:visibility="gone"
						android:id="@+id/details_v3"
						android:layout_width="0dp"
						android:layout_height="match_parent"
						android:layout_weight="1"
						android:text=" 无忧银行卡办理之后立即提现"
						android:textSize="16sp"
						android:textColor="@color/black"
						android:gravity="center_vertical"
						android:drawableLeft="@mipmap/icon_checked"
						/>

				<TextView
						android:visibility="gone"
						android:id="@+id/details_v4"
						android:layout_width="0dp"
						android:layout_height="match_parent"
						android:layout_weight="1"
						android:text=" 需集合"
						android:textSize="16sp"
						android:textColor="@color/black"
						android:gravity="center_vertical"
						android:drawableLeft="@mipmap/icon_checked"
						/>

			</LinearLayout>

			<LinearLayout
					android:padding="10dp"
					android:orientation="vertical"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@color/white"
					>

				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						>

					<TextView
							android:textColor="@color/black"
							android:textSize="16sp"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="集合时间 : "
							/>


					<TextView
							android:id="@+id/work_details_jiheTime"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="@color/black"
							android:textSize="16sp"
							/>
				</LinearLayout>

				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						>

					<TextView
							android:layout_marginTop="10dp"
							android:textColor="@color/black"
							android:textSize="16sp"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="集合地点 : "
							/>

					<TextView
							android:layout_marginTop="10dp"
							android:id="@+id/work_details_jiheLoc"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="@color/black"
							android:textSize="16sp"
							/>

				</LinearLayout>

				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						>

					<TextView
							android:layout_marginTop="10dp"
							android:textColor="@color/black"
							android:textSize="16sp"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="工作日期 : "
							/>


					<TextView
							android:layout_marginTop="10dp"
							android:textColor="@color/black"
							android:textSize="16sp"
							android:id="@+id/work_details_date"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							/>


				</LinearLayout>

				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						>

					<TextView
							android:layout_marginTop="10dp"
							android:textColor="@color/black"
							android:textSize="16sp"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="工作时间 : "
							/>


					<TextView
							android:layout_marginTop="10dp"
							android:textColor="@color/black"
							android:textSize="16sp"
							android:id="@+id/list_item_workTimeRange"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							/>

				</LinearLayout>

				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						>

					<TextView
							android:layout_marginTop="10dp"
							android:textColor="@color/black"
							android:textSize="16sp"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="工作地点 : "
							/>

					<TextView
							android:layout_marginTop="10dp"
							android:textColor="@color/black"
							android:textSize="16sp"
							android:id="@+id/work_details_location"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							/>

				</LinearLayout>


			</LinearLayout>

			<TextView
					android:padding="10dp"
					android:layout_marginTop="10dp"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@color/white"
					android:textSize="20sp"
					android:textColor="@color/blue_topBar"
					android:gravity="center_vertical"
					android:text="工作描述"
					/>

			<TextView
					android:id="@+id/work_details_info"
					android:padding="10dp"
					android:layout_marginTop="1dp"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@color/white"
					android:textSize="16sp"
					android:textColor="@color/black"
					android:gravity="center_vertical"
					/>
		</LinearLayout>
	</ScrollView>
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="10dp"
			android:background="@color/white">

		<TextView
				android:id="@+id/work_details_signUp"
				android:layout_width="match_parent"
				android:layout_height="50dp"
				android:textColor="@color/white"
				android:text="@string/SignUp"
				android:textSize="20sp"
				android:gravity="center"
				android:background="@drawable/shape_circle_quit"
				/>

	</LinearLayout>

</LinearLayout>
